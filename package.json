{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc -b",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "clean": "rm -rf lib dist",
    "lint": "eslint packages/**/*.ts",
    "package-main": "ncc build lib/main/main.js --source-map --license licenses.txt -o dist/main",
    "package-post": "ncc build lib/post/post.js --source-map --license licenses.txt -o dist/post",
    "package": "npm run 'package-main' && npm run 'package-post'",
    "test": "jest",
    "all": "npm run clean && npm run format && npm run lint && npm run build && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.7.0",
    "eslint-plugin-jest": "^28.6.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.3.3",
    "ts-jest": "^29.2.3",
    "typescript": "^5.5.3"
  }
}
